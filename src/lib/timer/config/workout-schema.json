{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "file:///workout-schema.json",
  "title": "Workout plan",
  "type": "object",
  "required": ["rounds"],
  "properties": {
    "title": { "type": "string", "description": "Workout name" },
    "description": { "type": "string", "description": "Optional short summary" },
    "preStartSeconds": { "type": "number", "minimum": 0, "description": "Countdown before the first phase" },
    "preStartLabel": { "type": "string", "description": "Label displayed during pre-start" },
    "defaultRepCounterMode": {
      "type": "string",
      "enum": ["swing", "lockout", "disabled"],
      "description": "Default rep counter mode for sets without an override"
    },
    "enableRepCounter": {
      "type": "string",
      "enum": ["work", "all"],
      "description": "Phases where the rep counter runs"
    },
    "enableModeChanging": {
      "type": "boolean",
      "description": "Allow gesture-based rep counter mode changes by default"
    },
    "rounds": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["sets"],
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "repetitions": { "type": "integer", "minimum": 1 },
          "restAfterSeconds": { "type": "number", "minimum": 0 },
          "sets": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["label", "workSeconds"],
              "properties": {
                "id": { "type": "string" },
                "label": { "type": "string", "description": "Set name" },
                "workSeconds": { "type": "number", "minimum": 0 },
                "restSeconds": { "type": "number", "minimum": 0 },
                "repetitions": { "type": "integer", "minimum": 1 },
                "transitionSeconds": { "type": "number", "minimum": 0 },
                "targetRpm": { "type": "number", "minimum": 0 },
                "announcements": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["text"],
                    "properties": {
                      "text": { "type": "string" },
                      "atSeconds": {
                        "oneOf": [
                          { "type": "number" },
                          { "type": "array", "items": { "type": "number" } }
                        ]
                      },
                      "offsetsFromEnd": {
                        "type": "array",
                        "items": { "type": "number" }
                      },
                      "once": { "type": "boolean" },
                      "voice": { "type": "string" }
                    },
                    "additionalProperties": true
                  }
                },
                "restAnnouncements": {
                  "type": "array",
                  "items": { "$ref": "#/properties/rounds/items/properties/sets/items/properties/announcements/items" }
                },
                "repCounterMode": {
                  "type": "string",
                  "enum": ["swing", "lockout", "disabled"],
                  "description": "Override rep counter mode for this set"
                },
                "enableModeChanging": {
                  "type": "boolean",
                  "description": "Allow gesture-based mode changes in this set"
                }
              },
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
